<?xml version="1.0" encoding="utf-8"?>

<společnost
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../company.xsd">

    
    <!-- did is required, a nonempty string unique for all divizes,
      (can be used as a key for divizes)
      mandatory element - there must be always at least one divize in the company
    -->
    <divize did="production_zlin">
        <!-- name is optional and contains a string -->
        <jméno>Production factory Zlín</jméno>
        <!-- head is optional and contains always a person if present -->
        <vedení>
            <!-- mandatory element person, pid is required, unique (positive) integer 
            (can be used as a key for persons);
            the jméno, surjméno, salary elts. can be ordered in any order
            -->
            <osoba pid="1"> 	
                <!-- name is required, non-empty string -->	 
                <jméno>Pavel</jméno>	 
                <!-- příjmení is required, non-empty string -->
                <příjmení>Novák</příjmení> 
                <!-- salary is required, positive number 
	             with 2 decimal places precision, e.g. 10000.50 -->
                <plat>20000.00</plat> 
                <!-- note optional element, repeatable, contains any string -->  
                <poznámka>Poznámka</poznámka>   
            </osoba>            
        </vedení>
    </divize>
    <divize did="development_brno">
        <vedení>
            <osoba pid="2">
                <jméno>Jan</jméno>
                <příjmení>Novák</příjmení>
                <plat>200000.00</plat>
            </osoba>
        </vedení>
    </divize>
    <divize did="headquarter">
        <vedení>
            <osoba pid="3">
                <jméno>Jana</jméno>
                <příjmení>Nováková</příjmení>
                <plat>300000.00</plat>
                <poznámka>Hlavní vedoucí</poznámka>
                <poznámka>Velmi šikovná</poznámka>
                <poznámka>administrativní pracovnice</poznámka>
            </osoba>
      </vedení>
    </divize>
</společnost>
