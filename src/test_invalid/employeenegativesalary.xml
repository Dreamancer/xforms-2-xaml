<?xml version="1.0" encoding="utf-8"?>

<společnost
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../company.xsd">

    
    <!-- did is required, a nonempty string unique for all divisions,
      (can be used as a key for divisions)
      mandatory element - there must be always at least one division in the společnost
    -->
    <divize did="production_zlin">
        <zaměstnanci>
            <zaměstnanec kategorie="dělník" eid="1">
                <jméno>Jan Rychlik</jméno>
                <plat>-10000.00</plat>
            </zaměstnanec>
        </zaměstnanci>
    </divize>
</společnost>
